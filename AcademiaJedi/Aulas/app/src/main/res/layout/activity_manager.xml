<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tmbs.academia_jedi.aula3.ui.ManagerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_activity"
        android:id="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_button_intent"
        android:id="@+id/button_intent"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="47dp"
        android:layout_alignRight="@+id/button_dialog"
        android:layout_alignEnd="@+id/button_dialog" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_dialog"
        android:id="@+id/button_dialog"
        android:layout_below="@+id/button_intent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_fragment"
        android:onClick="onClickFragmentAndTab"
        android:id="@+id/button_fragments_and_tabs"
        android:layout_below="@+id/button_dialog"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"

        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/icon_academia_jedi"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button_intent"
        android:layout_alignEnd="@+id/button_intent" />
</RelativeLayout>
